{
  "name": "poke-orchestrator",
  "version": "1.0.0",
  "description": "Orchestrator server that allows Poke to control multiple Claude Code instances via MCP",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/server.ts",
    "dev:tunnel": "cloudflared tunnel --url http://localhost:3000",
    "build": "tsc",
    "start": "node --env-file=.env dist/server.js",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "format:check": "biome check .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write ."
  },

  "keywords": [
    "poke",
    "claude",
    "mcp",
    "orchestrator",
    "ai",
    "agent"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.31",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "express": "^5.2.1",
    "fastmcp": "^3.31.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.1.3",
    "undici": "^7.3.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
